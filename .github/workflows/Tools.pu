name: Run tools on repo

on:
  workflow_dispatch:  # handmatig starten via Actions tab

jobs:
  tools:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"
      - run: pip install pandas streamlit
      - run: python tools/auto_fix_imports.py
      - run: python tools/smoke_test.py
